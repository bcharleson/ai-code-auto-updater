{
  "name": "ai-code-updater",
  "version": "2.0.0",
  "description": "Automated updater for AI coding tools: Augment (VS Code extension), Claude Code CLI, and Gemini CLI",
  "main": "index.js",
  "bin": {
    "ai-code-updater": "./index.js",
    "acu": "./index.js"
  },
  "scripts": {
    "start": "node index.js",
    "test": "node index.js --dry-run",
    "create-app": "./create-app.sh",
