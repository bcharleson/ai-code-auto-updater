    "install-task": "powershell -ExecutionPolicy Bypass -File ./Install-WindowsTask.ps1",
    "uninstall-task": "powershell -ExecutionPolicy Bypass -File ./Uninstall-WindowsTask.ps1"
  },
  "dependencies": {
    "node-fetch": "^2.7.0",
    "semver": "^7.5.4",
